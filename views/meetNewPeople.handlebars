  <div class="panel-group" align="center">
    {{#each activity}}

    <div class="panel panel-default">

      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#{{level}}">{{level}}</a>
        </h4>
      </div>
      <div id= "{{level}}" class="panel-collapse collapse">
        <form>
          <div class = "easy-sublist">
              {{#each descriptions}}
                <input type="checkbox" name="easy-list">{{name}}</input>
                <br>
              {{/each}}
          </div>
          <!-- Added edit/delete buttons -->
          <button href="editActivityModal" class="btn btn-primary"> Edit </button>
          <button class="btn btn-danger"> Delete </button>
        </form>
      </div>
    </div>
    {{/each}}

