<!DOCTYPE html>
<html>
<head>
  <title>Social Butterfly | Meet New People</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="http://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <script src="handlebars-v4.0.5.js"></script>
  <script src="javascript/meetNewPeople.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Latest compiled and minified CSS -->
  <!-- Optional theme -->
  <script type="text/javascript" src="http://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <script src="../handlebarshelper.js"></script>
  <link rel="stylesheet" href="css/style.css"
</head>

<body>
  <div class="content-placeholder"></div>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Meet</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li class="active"><a href="#"><i class="fa fa-user-plus"></i>&nbsp;&nbsp;&nbsp;Meet New People<span class="sr-only"></span></a></li>
        <li><a href="connect"><i class="fa fa-users"></i>&nbsp;&nbsp;&nbsp;Connect With Friends</a></li>
        <li><a href="events"><i class="fa fa-calendar"></i>&nbsp;&nbsp;&nbsp;Go To Events</a></li>
        <li><a href="settings"><i class="fa fa-cog"></i>&nbsp;&nbsp;&nbsp;Account Settings</a></li>
        <li><a href="faq"><i class="fa fa-question"></i>&nbsp;&nbsp;&nbsp;Help and FAQ</a></li>
      </ul>

    </div>
  </nav>
    <!-- /.navbar-collapse -->

    <div class="new-goal-button">
      <a href="newActivity" class="btn btn-primary"><i class="fa fa-plus"></i></a>
    </div>

    <div align = "center">
      <div class = "points">
        <h1> 453 POINTS </h1>
      </div>
    </div>

    <div align = "center">
    <div class="btn-group" data-toggle="buttons">
      <label class="btn btn-primary active">
        <input type="radio" name="options" id="active-goals" autocomplete="off" checked> Active Goals
      </label>
      <label class="btn btn-primary">
        <input type="radio" name="options" id="completed" autocomplete="off"> Completed
      </label>
    </div>
  </div>

  </div>

  <div class="panel-group" align="center">
    {{#each activity}}

    <div class="panel panel-default">

      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href="#{{level}}">{{level}}</a>
        </h4>
      </div>
      <div id= "{{level}}" class="panel-collapse collapse">
        <form>
          <div class = "easy-sublist">
              {{#each descriptions}}
                <label><input type="checkbox" name="easy-list">{{name}}</input></label><br>
              {{/each}}
          </div>
        </form>
      </div>
    </div>
    {{/each}}

  </div>


</body>
