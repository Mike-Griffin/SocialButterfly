<div class="container">
    <!-- TASK ADD Button trigger modal -->
  <button class="btn btn-info btn-block" data-toggle="modal" data-target="#myModal">
   <span class="glyphicon glyphicon-plus"></span> Add New Task
  </button>
</div>

  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove"></span></button>
          <h2 class="modal-title" id="myModalLabel">New Task</h2>
        </div>

        <!-- START OF TASK ADD MODAL BODY-->

        <div class="modal-body">

         <div class="level-container" align="center">
          <div class="level-title">
            <label><p>Level</p></label>
          </div>

          <form action="meetNewPeople">
          <div class="level-selector" form="levelform">
            <select name="level-difficulty">
              <option value="0">Easy</option>
              <option value="1">Medium</option>
              <option value="2">Hard</option>
            </select>
          </div>

          <br>

          <div class="activity-section">
           <label> <p>Activity</p></label>
           <input type="text" name = "ActivityDescription" class="form-control" id="psw" placeholder="Enter new activity">
           <br>
         </div>
       </div>

       <p>
        <button type="submit" href="#" data-toggle="modal" data-target="#task-success" class="btn btn-info btn-block"><span class="glyphicon glyphicon-plus"></span> Add new task</button>
      </p>
    </form>

    </div>

    <!-- END OF TASK ADD MODAL BODY -->

    <div class="modal-footer">
      <button type="button"  class="btn btn-danger btn-default pull-left" data-toggle="modal" data-target="#fail-save"> <span class="glyphicon glyphicon-remove"></span> Close</button>
    </div>
  </form>
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->

