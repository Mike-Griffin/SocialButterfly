<!DOCTYPE html>
<html>
<head>
  <title>Social Butterfly | Meet New People</title>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/css/bootstrap.min.css">
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.12.0/jquery.min.js"></script>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.6/js/bootstrap.min.js"></script>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
  <!-- Latest compiled and minified CSS -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap.min.css">
  <!-- Optional theme -->
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/3.2.0/css/bootstrap-theme.min.css">
  <script type="text/javascript" src="https://ajax.googleapis.com/ajax/libs/jquery/1.9.1/jquery.min.js"></script>
  <!-- Latest compiled and minified JavaScript -->
  <link rel="stylesheet" href="css/style.css"
</head>

<body>
  <nav class="navbar navbar-default">
  <div class="container-fluid">
    <!-- Brand and toggle get grouped for better mobile display -->
    <div class="navbar-header">
      <button type="button" class="navbar-toggle collapsed" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1" aria-expanded="false">
        <span class="sr-only">Toggle navigation</span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
        <span class="icon-bar"></span>
      </button>
      <a class="navbar-brand" href="#">Connect</a>
    </div>

    <!-- Collect the nav links, forms, and other content for toggling -->
    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
      <ul class="nav navbar-nav">
        <li><a href="meetNewPeople"><i class="fa fa-user-plus"></i>&nbsp;&nbsp;&nbsp;Meet New People<span class="sr-only"></span></a></li>
        <li class="active"><a href="#"><i class="fa fa-users"></i>&nbsp;&nbsp;&nbsp;Connect With Friends</a></li>
        <li><a href="events"><i class="fa fa-calendar"></i>&nbsp;&nbsp;&nbsp;Go To Events</a></li>
        <li><a href="settings"><i class="fa fa-cog"></i>&nbsp;&nbsp;&nbsp;Account Settings</a></li>
        <li><a href="faq"><i class="fa fa-question"></i>&nbsp;&nbsp;&nbsp;Help and FAQ</a></li>
      </ul>

    </div>
  </nav>
</div>

  <div align = "center">
    <div class = "points">
      <h1> 453 POINTS </h1>
    </div>
  </div>

  <hr></hr>
  <div class="container">
    <!-- TASK ADD button trigger modal -->
    <button class="btn btn-info btn-block" data-toggle="modal" data-target="#myModal">
      <span class="glyphicon glyphicon-plus"></span> Add New Connection
    </button>

    <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
      <div class="modal-dialog">
        <div class="modal-content">
          <div class="modal-header">
            <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove"></span></button>
            <h2 class="modal-title" id="myModalLabel">New Connection</h2>
          </div>

  <!-- THE OLD CODE <button class="btn btn-primary btn-block">
    <a href="newConnect" class="btn btn-primary" data-ignore="push"><i class="fa fa-plus"> Add new friend </i></a>
  </button>-->

  <!-- START OF TASK ADD MODAL BODY-->
  <div class="modal-body">
    <div class="name-container" align="center">
      <div class="name-title">
        <form for="name">
        </span> Name:

        <input type="text" class="form-control" id="psw" placeholder="Enter name of friend you want to catch up with">
      </input>
    </form>
  </div>

  <br>

  <div class="last-seen" align="center">
    <form>
      Haven't seen since: <input type="date" name="DateLastSeen">
    </form>
  </div>

  <br>

  <div class ="goal-container" align="center">
    <form for="Day-settings">
      Goal to see every:
      <select name="goal-setting">
        <option value="01">01</option>
        <option value="02">02</option>
        <option value="03">03</option>
        <option value="04">04</option>
        <option value="05">05</option>
        <option value="06">06</option>
        <option value="07">07</option>
        <option value="08">08</option>
        <option value="09">09</option>
        <option value="10">10</option>
      </select>
    </label>

    <label for="DWM-settings">
      <select name="weekly-monthly-setting">
        <option value="daily">Day(s)</option>
        <option value="weekly">Week(s)</option>
        <option value="monthly">Month(s)</option>
      </select>
    </form>
  </div>

  <br>

  </div>

  <p>
    <button type="submit" href="#" data-toggle="modal" data-target="#task-success" class="btn btn-info btn-block"><span class="glyphicon glyphicon-plus"></span> Add new connection</button>
  </p>

</div>

<!-- END OF TASK ADD MODAL BODY -->

<div class="modal-footer">
  <button type="button"  class="btn btn-danger btn-default pull-left" data-toggle="modal" data-target="#fail-save"> <span class="glyphicon glyphicon-remove"></span> Close</button>
</div>
</form>
</div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->


<!--Modal for TASK ADD SUCCESS-->
<div class="modal fade" id="task-success" tabindex="-1" role="dialog" aria-labelledby="task-success-title" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove"></span></button>
        <h3 class="modal-title" id="task-success-title"><span class="glyphicon glyphicon-ok-circle"></span> Success!</h3>
      </div>
      <div class="modal-body">
        <p>Your connection has been added successfully.</p>
      </div>

      <!-- End of TASK ADD SUCCESS BODY-->

      <div class="modal-footer">
        <button type="button"  class="btn btn-default pull-left" data-dismiss="modal"> <span class="glyphicon glyphicon-arrow-left"></span> Go back to friends list</button>
      </div>
    </form>

  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div>

</div>
<div id="push"></div>


<!--Modal for QUIT W/O SAVING-->
<div class="modal fade" id="fail-save" tabindex="-1" role="dialog" aria-labelledby="task-success-title" aria-hidden="true">
  <div class="modal-dialog">
    <div class="modal-content">
      <div class="modal-header" style="background-color:#F2354E">
        <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove"></span></button>
        <h3 class="modal-title" id="task-success-title"><span class="glyphicon glyphicon-remove-circle"></span> Wait!</h3>
      </div>
      <div class="modal-body">
        <p>You haven't finished adding your connection. If you quit now, all data will be lost.</p>
      </div>

      <!-- End of QUIT W/O SAVING-->

      <div class="modal-footer">
          <a href = "connect" class="btn btn-default pull-left"> <span class="glyphicon glyphicon-arrow-left"></span> YES, go back to friends list</a>

        <button type="button"  class="btn btn-primary pull-right" data-dismiss="modal"> <span class="glyphicon glyphicon-arrow-right"></span> NO, continue adding connection</button>
      </div>
    </form>

  </div><!-- /.modal-content -->
</div><!-- /.modal-dialog -->
</div>

</div>
<div id="push"></div>
  <hr></hr>


  <div class="panel-group" align="center">
    <div class="panel panel-default">
      {{#each connection}}
      <div class="panel-heading">
        <h4 class="panel-title">
          <a data-toggle="collapse" href='#{{id}}' >{{name}}</a>
        </h4>
      </div>
      <div id='{{id}}' class="panel-collapse collapse">
        <ul class="list-group">
          <li class="list-group-item"><p>Haven't seen since</p>
                                      {{last-seen}}</li>
          <li class="list-group-item"><p>Goal is to see every {{goal}}</p>
            <button href="editConnectModal" class="btn btn-primary"> Edit </button>
            <button class="btn btn-danger"> Delete </button>
          </li>
        </ul>
      </div>
      {{/each}}
    </div>
  </div>

<script>
/* For ADDING NEW TASK */
$(document).ready(function(){
  $("#myBtn").click(function(){
    $("#myNewActivity").modal();
  });
});

/* For SUCCESSFULLY ADDING TASK */
$('#btnCancel').click(function(){
  $('#task-success').modal('toggle');
});

</script>

</body>
