<body>

  <header class="bar bar-nav">
    <!--<a href="connect.html" data-ignore="push" class="icon icon-left-nav pull-left"></a>-->
    <h1 class="title">Add Connection</h1>
  </header>
  <br></br>
  <br></br>

  <form action="connect">
  <div class="name-container" align="center">
      Name of Friend: <input type="text" name="friend">
    </div>

  <div class="last-seen" align="center">
      Haven't seen since: <input type="date" name="date">
  </div>

<div class ="goal-container" align="center">
  <label for="Day-settings">
    Goal to see every:
    <select name="num">
        <option value="1">01</option>
        <option value="2">02</option>
        <option value="3">03</option>
        <option value="4">04</option>
        <option value="5">05</option>
        <option value="6">06</option>
        <option value="7">07</option>
        <option value="8">08</option>
        <option value="9">09</option>
        <option value="10">10</option>
    </select>
  </label>
  <label for="DWM-settings">
    <select name="time">
      <option value="day">Day(s)</option>
      <option value="week">Week(s)</option>
      <option value="month">Month(s)</option>
    </select>
  </label>
</div>

   <div class="card" align="center">
      <input class="btn btn-primary" type="submit" value="Save Changes">
    </form>

  </div>
