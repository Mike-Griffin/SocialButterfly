<div align="center">
<div class="btn-group" data-toggle="buttons">
  <a onclick="activeClicked()" href="#" id="active-button" class="btn btn-primary btn-md active" role="button">
    <input type="radio" name="options" id="option1" autocomplete="off" checked> Active goals
  </a>
  <a onclick="completedClicked()" id="completed-button" href="#" class="btn btn-primary btn-md" role="button">
    <input type="radio" name="options" id="option3" autocomplete="off"> Completed goals
  </a>
</div>
</div>

  <hr></hr>

  <div class="container">
    <!-- TASK ADD Button trigger modal -->
    <button id="add-new-button" class="btn btn-info btn-block" data-toggle="modal" data-target="#myModal">
      <span class="glyphicon glyphicon-plus"></span> Add New Goal
    </button>
  </div>



  <div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <h2 class="modal-title" id="myModalLabel">New Goal
          <button type="button" class="btn btn-danger btn-default pull-right" data-toggle="modal" data-target="#fail-save"> <span class="glyphicon glyphicon-remove"></span> Close</button>
        </h2>
        </div>

        <!-- START OF TASK ADD MODAL BODY-->

        <div class="modal-body">

          <div class="level-container" align="center">
            <div class="level-title">
              <label>
                <p>Level</p>
              </label>
            </div>

            <form action="meetNewPeople">
              <div class="level-selector" form="levelform">
                <select name="level-difficulty">
                  <option value="0">Easy</option>
                  <option value="1">Medium</option>
                  <option value="2">Hard</option>
                </select>
              </div>

              <br>

              <div class="activity-section">
                <label>
                  <p>Activity</p>
                </label>
                <input type="text" name="ActivityDescription" class="form-control" id="psw" placeholder="Enter new activity">
                <br>
              </div>
          </div>

          <p>
            <button type="submit" href="#" data-toggle="modal" data-target="#task-success" class="btn btn-info btn-block"><span class="glyphicon glyphicon-plus"></span> Add new goal</button>
          </p>
          </form>

        </div>

        <!-- END OF TASK ADD MODAL BODY -->
        </form>
      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>

  <!--START OF QUIT W/O SAVING MODAL-->
  <div class="modal fade" id="fail-save" tabindex="-1" role="dialog" aria-labelledby="task-success-title" aria-hidden="true">
    <div class="modal-dialog">
      <div class="modal-content">
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"></button>
          <h3 style="color: #000000" class="modal-title" id="task-success-title"><span class="glyphicon glyphicon-remove-circle"></span> Wait!</h3>
        </div>
        <div class="modal-body" align="center">
          <h4>You haven't finished adding your goal.
<br>
<br>
          If you quit now, all data will be lost.</h4>
        </div>

        <div class="modal-footer">
          <a href="meetNewPeople" class="btn btn-default pull-left"> <span class="glyphicon glyphicon-arrow-left"></span> YES, go back to active goals</a>

          <button type="button" class="btn btn-primary pull-right" data-dismiss="modal"> <span class="glyphicon glyphicon-arrow-right"></span> NO, continue adding goal</button>
        </div>
        </form>

      </div>
      <!-- /.modal-content -->
    </div>
    <!-- /.modal-dialog -->
  </div>

  </div>
  <div id="push"></div>

  <!-- END OF QUIT W/O SAVING MODAL-->

  <div class="panel-group" align="center">
    {{#each status}}
      <div id="{{statusType}}">
        {{#each activity}}

          <div class="panel panel-default">

            <div class="panel-heading">
              <h4 class="panel-title">
                <a data-toggle="collapse" href="#{{statId}}{{level}}">{{level}} ({{difficultyPoints}} pts)</a>
              </h4>
            </div>
            <div id="{{statId}}{{level}}" class="panel-collapse collapse" aria-expanded="true">
              <div class="easy-sublist">
                <br>
                {{#each descriptions}}
                  <button data-toggle="modal" data-target="#completeActivityModal{{id}}" class="btn btn-default complete-task-button"><i class="glyphicon glyphicon-ok"></i></button>
                  <div class="modal fade" id="completeActivityModal{{id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="true">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                          <h4 class="modal-title" id="myModalLabel"><span class="glyphicon glyphicon-remove-circle"></span> Wait!</h4>
                        </div>
                        <div class="modal-body">
                          Are you sure you want to mark task as completed?
                        </div>
                        <div class="modal-footer">
                          <form action="meetNewPeople">
                            <input type="hidden" name="idVal" value="{{id}}">
                            <input type="hidden" name="ActivityDescription" value="{{name}}">
                            <button type="submit" class="btn btn-primary pull-left">YES, mark as completed</button>
                          </form>
                          <a href="meetNewPeople">
                            <button type="button" class="btn btn-default pull-right">NO, close window</button>
                          </a>
                        </div>
                      </div>
                    </div>
                  </div>
                  {{name}}
                  <br>
                  <br>
                  <button data-toggle="modal" data-target="#editActivityModal{{id}}" class="btn btn-primary edit-button"> Edit </button>

                  &nbsp;

                  <div class="modal fade" id="editActivityModal{{id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove"></span></button>
                          <h2 class="modal-title" id="myModalLabel">Edit Goal</h2>
                        </div>

                        <!-- START OF TASK ADD MODAL BODY-->

                        <div class="modal-body">

                          <div class="level-container" align="center">
                            <div class="level-title">
                              <label>
                                <p>Level</p>
                              </label>
                            </div>
                            <form action="meetNewPeople">
                              <input type="hidden"="idVal" value="{{id}}">

                              <div class="level-selector" form="levelform">
                                <select name="level-difficulty">
                                  <option value="0">Easy</option>
                                  <option value="1">Medium</option>
                                  <option value="2">Hard</option>
                                </select>
                              </div>

                              <br>

                              <div class="activity-section">
                                <label>
                                  <p>Activity</p>
                                </label>
                                <input type="text" value="{{name}}" name="ActivityDescription" class="form-control" placeholder="Enter new activity">
                                <br>
                              </div>
                          </div>

                          <p>
                            <button type="submit" href="#" data-toggle="modal" data-target="#task-success" class="btn btn-info btn-block"><span class="glyphicon glyphicon-plus"></span> Save Changes</button>
                          </p>
                          </form>

                        </div>
                        <!-- /.modal-content -->
                      </div>
                      <!-- /.modal-dialog -->
                    </div>
                  </div>

                  <button data-toggle="modal" data-target="#deleteActivityModal{{id}}" class="btn btn-danger delete-button"> Delete </button>

                  <div class="modal fade" id="deleteActivityModal{{id}}" tabindex="-1" role="dialog" aria-labelledby="myModalLabel" aria-hidden="false">
                    <div class="modal-dialog">
                      <div class="modal-content">
                        <div class="modal-header">
                          <button type="button" class="close" data-dismiss="modal" aria-hidden="true"><span class="glyphicon glyphicon-remove"></span></button>
                          <h2 class="modal-title" id="myModalLabel">Are you sure you want to delete goal? </h2>

                          <form action="meetNewPeople">
                            <div class="modal-footer">
                              <input type="hidden" name="idVal" value="{{id}}">
                              <button type="submit" class="btn btn-default pull-left"> <span class="glyphicon glyphicon"></span> YES, delete goal</button>
                          </form>
                          <button type="button" class="btn btn-danger pull-right" data-dismiss="modal"> <span class="glyphicon glyphicont"></span> NO, go back to active goals</button>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <hr></hr>
                {{/each}}
              </div>
              <!-- Added edit/delete buttons -->
            </div>
          </div>
        {{/each}}
      </div>
    {{/each}}

  </div>

  <script type="text/javascript">
    // For ADDING NEW TASK-->
    var curList = 0;
    $(document).ready(function() {
      $("#completed-list").addClass("list-hide");
      $("#completed-list .list-checkbox").addClass("list-hide");
      $("#completed-list .edit-button").addClass("list-hide");
      $("#completed-list .delete-button").addClass("list-hide");
      $("#completed-list .complete-task-button").addClass("list-hide");
      $("#myBtn").click(function() {
        $("#myNewActivity").modal();
      });
      $('#addedTask').delay(2000).queue(function() {
        $(this).addClass("list-hide");
      });
      //expand all the menus
      $('.panel:nth-child(1)').find('a').trigger('click');
      $('.panel:nth-child(2)').find('a').trigger('click');
      $('.panel:nth-child(3)').find('a').trigger('click');
    });
    // for SUCCESSFULLY ADDING TASK -->
    $('#btnCancel').click(function() {
      $('#task-success').modal('toggle');
    });
    function completedClicked() {
      if (curList === 0) {
        curList = 1;
        $("#active-list").addClass("list-hide");
        $("#completed-list").removeClass("list-hide");
        //$("#active-button").removeClass("btn-primary");
        //$("#completed-button").addClass("btn-primary");
        $("#add-new-button").addClass("list-hide");
        //document.getElementById("completed-list").classList.remove("list-hide");
      }
    }
    function activeClicked() {
      if (curList === 1) {
        curList = 0;
        $("#active-list").removeClass("list-hide");
        $("#completed-list").addClass("list-hide");
        //$("#active-button").addClass("btn-primary");
        //$("#completed-button").removeClass("btn-primary");
        $("#add-new-button").removeClass("list-hide");
      }
    }
  </script>
